<Page
  xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" loaded="pageLoaded"
  xmlns:c="nativescript-pager">
  <GridLayout rows="auto,auto ,auto,auto, *, auto" columns="*" id="sl">
    <Label text="Look Ma No Fragments"/>
    <Label row="1" text="{{index}}"/>
    <Button row="2" text="Toggle Swipe" tap="toggleSwipe"/>
    <StackLayout row="3" orientation="horizontal">
      <Button text="Prev" tap="prevPage" />
      <Button text="Next" tap="nextPage" />
      <Button text="First" tap="firstPage" />
      <Button text="Last" tap="lastPage" />
    </StackLayout>
    <c:Pager selectedIndexChange="selectedIndexChange" itemTemplateSelector="itemTemplateSelector" selectedIndex="5" items="{{items}}" row="4" id="pager" pagesCount="10" showNativePageIndicator="false" backgroundColor="lightsteelblue">
      <Pager.itemTemplates>
        <template key="even">
          <GridLayout rows="auto,auto,*" columns="*">
            <Label text="Even"/>
            <Label row="1" text="{{title}}"/>
            <Image loaded="loadedImage" row="2" src="{{image}}"/>
          </GridLayout>
        </template>
        <template key="odd">
          <GridLayout rows="auto,auto ,auto,*" columns="*" backgroundColor="white">
            <Label text="Odd"/>
            <Label row="1" text="{{title}}"/>
            <StackLayout row="2">
              <Label text="{{image}}"/>
            </StackLayout>
            <Image loaded="loadedImage" row="3" src="{{image}}"/>
          </GridLayout>
        </template>
      </Pager.itemTemplates>
      <!-- <Pager.itemTemplate><GridLayout rows="auto,*" columns="*"><Label row="1" text="{{title}}"/><Image loaded="loadedImage" row="2" src="{{image}}"/></GridLayout></Pager.itemTemplate> -->
    </c:Pager>
    <Button text="Nav" row="5" tap="navigate"/>
  </GridLayout>
</Page>
